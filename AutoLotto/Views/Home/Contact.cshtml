@{
    ViewBag.Title = "Contact";
}

<style>
    img {
        width: 100%;
        height: 100%;
        max-height: 500px;
        margin-bottom: 10px;
    }
</style>

<h1>Quick start with a random full body workout</h1>
<div id="quickProgram" class="row">
    @{int i = 1;}
    @foreach (var or in ViewBag.Workouts)
    {
        <div class="col-md-4 workout" oid="@or.Id" mode="0" oids="@or.Id" id="tr@(i)" name="@or.ImageName" data-time="@or.Time">
            <img src="@("../Content/images/fullBody/" + or.ImageName)" class="card" />
        </div>

        i++;
    }
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            var minutesLabel = document.getElementById("minutes");
            var secondsLabel = document.getElementById("seconds");
            var totalSeconds = 0;
            var time;
            var timer;
            $(".workout").click(function () {
                time = parseInt($(this).attr("data-time"));
                console.log(time);
                toggleWorkoutModal_Layout({ time: $(this).attr("data-time"), name: $(this).attr("name") });
                timer = setInterval(setTime, 1000);
            });
            function setTime() {
                ++totalSeconds;
                if (totalSeconds == time) {
                    clearInterval(timer);
                }
                secondsLabel.innerHTML = pad(totalSeconds % 60);
                minutesLabel.innerHTML = pad(parseInt(totalSeconds / 60));
            }

            function pad(val) {
                var valString = val + "";
                if (valString.length < 2) {
                    return "0" + valString;
                } else {
                    return valString;
                }
            }
        });

    </script>
}